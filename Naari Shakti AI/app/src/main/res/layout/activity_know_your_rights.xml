<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:paddingBottom="24dp"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg_dashboard">

    <!-- Header with title and app logo at top-right -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp"
        android:background="@color/header_color"
        android:padding="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Know Your Legal Rights"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center" />

        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@string/app_logo"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:padding="16dp">

        <TextView
            android:id="@+id/rightsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#2C3E50"
            android:lineSpacingExtra="4dp"
            android:autoLink="web"
            android:textIsSelectable="true" />

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/contactLegalAidBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“ž Contact Legal Aid"
            android:textSize="16sp"
            android:backgroundTint="@color/header_color"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/downloadRightsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“„ Download Rights Guide"
            android:textSize="16sp"
            android:backgroundTint="@color/header_color"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/emergencyContactsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸš¨ Emergency Contacts"
            android:textSize="16sp"
            android:backgroundTint="@color/header_color" />

    </LinearLayout>

</LinearLayout>
